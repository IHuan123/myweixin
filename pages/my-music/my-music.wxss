/* pages/my-music/my-music.wxss */
page{
  padding-bottom:100rpx;
}
.Mcontainer{
  width:100%;
  padding:10rpx;
  box-sizing: border-box;
  margin-bottom:110rpx;
}
.header{
  width:100%;
  height:100rpx;
  display:flex;
  justify-content: space-between;
  align-items: center;
}
.mtitle{
  font-size:20px;
  font-weight:900;
  margin-left:20rpx;
}
.login-btn{
  width:100rpx;
  height:100rpx;
  margin-right:20rpx;
}
.login-btn>image{
  width:100rpx;
  height:100rpx;
  border-radius: 15rpx;
}
.music-list{
  width:90%;
  display:flex;
  justify-content:space-between;
  flex-wrap: wrap;
  margin:20rpx auto 0;
}
.music-item{
  margin-top:20rpx;
  width:300rpx;
}
.music-detail{
  width:300rpx;
}
.music-detail image{
  width:300rpx;
  height: 300rpx;
  border-radius: 15rpx;
}

.music-name,.author{
  font-size:14px;
  margin-top:5rpx auto;
  width:90%;
  
}
.remove{
  height:40rpx;
  width:80rpx;
  font-size:12px;
  color:red;
  border-radius: 10rpx;
  border:1rpx solid rgb(241, 130, 130);
  overflow: hidden;
  text-align: center;
}
.remove text{
  line-height:40rpx;
}
.title{
  width:70%;
}
.title-box{
  display: flex;
  justify-content: space-between;
}