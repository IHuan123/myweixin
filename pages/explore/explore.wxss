/* pages/explore/explore.wxss */
page{
  padding-bottom:100rpx;
}
.lswiper{
  width:100%;
  height:600rpx;
}
.lswiper .scon{
  height:400rpx;
}
.ltitle{
  height:100rpx;
  width:100%;
}
.ltitle text{
  font-size:16px;
  font-weight: 600;
  margin-left: 20rpx;
  line-height: 100rpx;
}
.box{
  width:100%;
  height:400rpx;
}
.imgbox{
  width:90%;
  height:400rpx;
  margin:0 auto;
  border-radius: 13rpx;
  overflow: hidden;
}
.imgbox image{
  width:100%;
  height:400rpx;
}
.author{
  margin:0 30rpx 10rpx;
}
.author text{
  font-size:14px;
  color:#aaa;
}
.placetitle{
  width:90%;
  margin:20rpx auto;
}
.placetitle text{
  font-size:16px;
  font-weight:bold;
}
.place{
  width:100%;
}
.pbox{
  width:90%;
  margin:0 auto;
  display:flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.place-item{
  width:50%;
  height:400rpx;
}
.pimg{
  width:300rpx;
  height:300rpx;
  border-radius: 15rpx;
  overflow:hidden;
  margin:0 auto;
}
.pimg image{
  width:300rpx;
  height:300rpx;
}
.pname{
  width:300rpx;
  margin:10rpx auto;
}
.pname text{
  font-size:14px;
}